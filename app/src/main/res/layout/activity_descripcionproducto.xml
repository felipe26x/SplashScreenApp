                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="343dp"
                        android:layout_height="226dp"
                        app:srcCompat="@drawable/cacao" />

                    <ImageView
                        android:id="@+id/imageView5"
