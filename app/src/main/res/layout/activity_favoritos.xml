<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favoritos">


    <ImageButton
        android:id="@+id/btnBuscar"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:src="@drawable/busquedal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="354dp"
        android:layout_height="590dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBuscar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">


                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="71dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="240dp"
                    android:background="#08FFFFFF"
                    app:srcCompat="@drawable/ic_baseline_delete_24" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#4CAF50"
                    android:text="Comprar"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="116dp"
                    android:layout_height="153dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/platano" />

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="30dp"
                    android:text="Bananos"
                    android:textColor="#090909" />

                <TextView
                    android:id="@+id/descripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="60dp"
                    android:text="Banano criollo " />


                <TextView
                    android:id="@+id/cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="90dp"
                    android:text="1racimo x20 " />

                <TextView
                    android:id="@+id/Categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="120dp"
                    android:text="Categoria : Frutas" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">


                <Button
                    android:id="@+id/button1"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#4CAF50"
                    android:text="Comprar"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="116dp"
                    android:layout_height="153dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/cacao" />

                <TextView
                    android:id="@+id/nombre1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="30dp"
                    android:text="Cacao"
                    android:textColor="#090909" />

                <TextView
                    android:id="@+id/descripcion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="60dp"
                    android:text="Cacao del bueno  " />

                <TextView
                    android:id="@+id/Categoria1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="90dp"
                    android:text="Categoria : Frutas" />

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="71dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="240dp"
                    android:background="#05FFFFFF"
                    app:srcCompat="@drawable/ic_baseline_delete_24" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">


                <Button
                    android:id="@+id/button2"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#4CAF50"
                    android:text="Comprar"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="116dp"
                    android:layout_height="153dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/papa" />

                <TextView
                    android:id="@+id/nombre2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="30dp"
                    android:text="Papa parda"
                    android:textColor="#090909" />

                <TextView
                    android:id="@+id/descripcion2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="60dp"
                    android:text=" papa de la negra" />

                <TextView
                    android:id="@+id/Categoria2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="90dp"
                    android:text="Categoria : Verduras" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="71dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="240dp"
                    android:background="#00FFFFFF"
                    app:srcCompat="@drawable/ic_baseline_delete_24" />


            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">


                <Button
                    android:id="@+id/button4"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#4CAF50"
                    android:text="Comprar"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="116dp"
                    android:layout_height="153dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/cafe" />

                <TextView
                    android:id="@+id/nombre4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="30dp"
                    android:text="cafe "
                    android:textColor="#090909" />

                <TextView
                    android:id="@+id/descripcion4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="60dp"
                    android:text="cafe capuccino " />

                <TextView
                    android:id="@+id/Categoria4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="90dp"
                    android:text="Categoria : Frutas" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="71dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="240dp"
                    android:background="#05FFFFFF"
                    app:srcCompat="@drawable/ic_baseline_delete_24" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="208dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:text="Favoritos"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/barraBotones"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="342dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/diseno"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnHome"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="home"
            android:src="@drawable/ic_baseline_home_24" />

        <ImageButton
            android:id="@+id/btnsubir"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="subir"
            android:src="@drawable/ic_baseline_arrow_circle_up_24" />

        <ImageButton
            android:id="@+id/btnfav"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:onClick="fav"
            android:src="@drawable/favorito" />

        <ImageButton
            android:id="@+id/btnperfil"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="perfil"
            android:src="@drawable/ic_baseline_person_24" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>